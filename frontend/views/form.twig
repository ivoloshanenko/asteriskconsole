<div id="create" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="createLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="createLabel">Create</h3>
  </div>
  <form action="/create" id="create-form" class="modal-body form-horizontal" method="post">
    <div class="control-group">
      <label class="control-label" for="create-form-name">Name</label>
      <div class="controls">
        <input type="text" id="create-form-name" name="user[name]" placeholder="Name">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="create-form-secret">Secret</label>
      <div class="controls">
        <input type="text" id="create-form-secret" name="user[secret]" placeholder="Secret">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="create-form-callerid">Callerid</label>
      <div class="controls">
        <input type="text" id="create-form-callerid" name="user[callerid]" placeholder="Callerid">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="create-form-context">Context</label>
      <div class="controls">
        <input type="text" id="create-form-context" name="user[context]" placeholder="Context">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="create-form-pickupgroup">Pickupgroup</label>
      <div class="controls">
        <input type="text" id="create-form-pickupgroup" name="user[pickupgroup]" placeholder="Pickupgroup" pattern="\d*">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="create-form-callgroup">Callgroup</label>
      <div class="controls">
        <input type="text" id="create-form-callgroup" name="user[callgroup]" placeholder="Callgroup" pattern="\d*">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="create-form-nat">Nat</label>
      <div class="controls">
        <select id="create-form-nat" name="user[nat]">
          <option value="1">Yes</option>
          <option value="0">No</option>
        </select>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="create-form-permit">Permit</label>
      <div class="controls">
        <input type="text" id="create-form-permit" placeholder="Permit" name="user[permit][0]">
        <input type="text" id="create-form-permit" placeholder="Permit" name="user[permit][1]">
      </div>
    </div>
  </form>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button type="submit" class="btn btn-success" form="create-form">Create</button>
  </div>
</div>