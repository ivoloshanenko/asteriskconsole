<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>AsterixConsole</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="assets/libs/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="assets/libs/bootstrap/css/bootstrap-responsive.css" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="assets/js/html5shiv.js"></script>
    <![endif]-->

  </head>

  <body>

    <section class="container" style="margin-top:20px;">

      <header>
        <div class="navbar">
          <div class="navbar-inner">
            <a class="brand" href="/">AsterixConsole</a>
            <ul class="nav">
              <li class="active"><a href="/">Users</a></li>
              <li><a href="#">..</a></li>
            </ul>
          </div>
        </div>
      </header>

      <section class="content">

        <div class="row-fluid">

          <!-- SEARCH -->
          <form class="form-search span4">
            <fieldset>
              <div class="input-append">
                <input type="text" class="span12 search-query">
                <button type="submit" class="btn">Search</button>
              </div>
            </fieldset>
          </form>

          <!-- CREATE -->
          <div class="span6">
            <a href="#create" role="button" class="btn btn-medium btn-success" data-toggle="modal"><i class="icon-plus icon-white"></i> Create</a>
          </div>

        </div>

        <!-- CONTENT -->
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Secret</th>
              <th>Callerid</th>
              <th>Context</th>
              <th>Pickupgroup</th>
              <th>Permit</th>
              <th>Nat</th>
              <th>IPaddr</th>
              <th>Useragent</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="users-list"></tbody>
        </table>

      </section>

    </section>

    <!-- CREATE FORM -->
    <div id="create" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="createLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="createLabel">Create</h3>
      </div>
      <form action="/create" id="create-form" class="modal-body form-horizontal" method="post">
        <div class="control-group">
          <label class="control-label" for="create-form-name">Name</label>
          <div class="controls">
            <input type="text" id="create-form-name" name="user[name]" placeholder="Name">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="create-form-secret">Secret</label>
          <div class="controls">
            <input type="text" id="create-form-secret" name="user[secret]" placeholder="Secret">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="create-form-callerid">Callerid</label>
          <div class="controls">
            <input type="text" id="create-form-callerid" name="user[callerid]" placeholder="Callerid">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="create-form-context">Context</label>
          <div class="controls">
            <input type="text" id="create-form-context" name="user[context]" placeholder="Context">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="create-form-pickupgroup">Pickupgroup</label>
          <div class="controls">
            <input type="text" id="create-form-pickupgroup" name="user[pickupgroup]" placeholder="Pickupgroup" pattern="\d*">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="create-form-callgroup">Callgroup</label>
          <div class="controls">
            <input type="text" id="create-form-callgroup" name="user[callgroup]" placeholder="Callgroup" pattern="\d*">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="create-form-nat">Nat</label>
          <div class="controls">
            <select id="create-form-nat" name="user[nat]">
              <option value="1">Yes</option>
              <option value="0">No</option>
            </select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="create-form-permit">Permit</label>
          <div class="controls">
            <input type="text" id="create-form-permit" placeholder="Permit" name="user[permit][0]">
            <input type="text" id="create-form-permit" placeholder="Permit" name="user[permit][1]">
          </div>
        </div>
      </form>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button type="submit" class="btn btn-success" form="create-form">Create</button>
      </div>
    </div>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="assets/libs/jquery/jquery.js"></script>
    <script src="assets/libs/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/libs/jquery.maskedinput/jquery.maskedinput.js"></script>
    <script src="assets/libs/jquery.scrollto/jquery.scrollto.js"></script>
    <script src="assets/libs/underscore/underscore.js"></script>
    <script src="assets/app.js"></script>

  </body>
</html>
